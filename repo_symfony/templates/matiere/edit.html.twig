{% extends 'base.html.twig' %}

{% block title %}Modifier la Matière{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Modifier la Matière</h1>

    <!-- Formulaire de modification dans une carte -->
    <div class="card p-4 shadow-sm">
        {{ include('matiere/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <!-- Lien pour revenir à la liste -->
    <div class="text-center mt-4">
        <a href="{{ path('app_matiere_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    <!-- Formulaire de suppression -->
    <div class="mt-4 text-center">
        {{ include('matiere/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
