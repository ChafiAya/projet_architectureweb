{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Edit User</h1>

        <!-- Form to edit user -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Update User Information</h5>
                
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <!-- Email Field -->
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    
                    <!-- Password Field with Eye Icon to toggle visibility -->
                    <div class="mb-3">
                        {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'passwordField', 'type': 'password'}}) }}
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword" onclick="togglePasswordVisibility()">
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        {{ form_errors(form.password) }}
                    </div>

                    <!-- Roles Field -->
                    <div class="mb-3">
                        {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.roles) }}
                    </div>

                    <!-- Enseignant Field -->
                    <div class="mb-3">
                        {{ form_label(form.enseignant, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.enseignant, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.enseignant) }}
                    </div>

                    <!-- Promotion Field -->
                    <div class="mb-3">
                        {{ form_label(form.promotion, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.promotion, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.promotion) }}
                    </div>

                    <!-- Submit Button -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Save Changes') }}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
        </div>

        <!-- Delete User Form -->
        <div class="mt-3">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordField = document.getElementById('passwordField');
            const eyeIcon = document.getElementById('eyeIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text'; // Show password in plain text
                eyeIcon.classList.remove('bi-eye');
                eyeIcon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password'; // Mask password with asterisks (*)
                eyeIcon.classList.remove('bi-eye-slash');
                eyeIcon.classList.add('bi-eye');
            }
        }
    </script>

    <!-- Bootstrap Icons for Eye Icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}
