{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>User Details</h1>

        <table class="table table-bordered mt-4">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles|join(', ') }}</td> <!-- Convert roles array to string -->
                </tr>
                <tr>
                    <th>Password</th>
                    <td>**********</td> 
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
