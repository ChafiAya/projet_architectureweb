{% extends 'base.html.twig' %}

{% block title %}Réservations pour {{ salle.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Réservations pour {{ salle.nom }}</h1>

    {% if reservations is empty %}
        <p class="text-center">Aucune réservation trouvée pour cette salle.</p>
    {% else %}
        <div class="list-group">
            {% for reservation in reservations %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-0"><strong>Date :</strong> {{ reservation.date_reservation|date('Y-m-d') }}</p>
                        <p class="mb-0"><strong>Heure :</strong> {{ reservation.heure_depart|date('H:i') }} - {{ reservation.heure_fin|date('H:i') }}</p>
                        <p class="mb-0"><strong>État :</strong> {{ reservation.etat_reservation }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
