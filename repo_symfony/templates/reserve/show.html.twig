{% extends 'base.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de la Réservation</h1>

    <div class="card shadow-sm p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reserve.id }}</td>
                </tr>
                <tr>
                    <th>Date de la Réservation</th>
                    <td>{{ reserve.dateReservation ? reserve.dateReservation|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Heure de Départ</th>
                    <td>{{ reserve.heureDepart ? reserve.heureDepart|date('H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Heure de Fin</th>
                    <td>{{ reserve.heureFin ? reserve.heureFin|date('H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_reserve_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_reserve_edit', {'id': reserve.id}) }}" class="btn btn-warning ml-2">Modifier</a>
    </div>

    
    <div class="mt-4 text-center">
        {{ include('reserve/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
