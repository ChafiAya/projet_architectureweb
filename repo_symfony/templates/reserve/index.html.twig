{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservationc salle de cours</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_reservation</th>
                <th>Heure_depart</th>
                <th>Heure_fin</th>
                <th>Etat_reservation</th>
                <th>Nom Enseignant</th> 
                <th>Promotion</th>
                <th>Salle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserve in reserves %}
            <tr>
                <td>{{ reserve.id }}</td>
                <td>{{ reserve.dateReservation ? reserve.dateReservation|date('Y-m-d') : '' }}</td>
                <td>{{ reserve.heureDepart ? reserve.heureDepart|date('H:i:s') : '' }}</td>
                <td>{{ reserve.heureFin ? reserve.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ reserve.etatReservation }}</td>
                <td>{{ reserve.enseignants|first.getNomEnseignant() }}</td>
                <td>{{ reserve.promotion|first.getEnseignement() }}</td>
                <td>{{ reserve.salles|first.getNomDeSalle() }}
                <td>
                    <a href="{{ path('app_reserve_show', {'id': reserve.id}) }}">Afficher</a>
                    <a href="{{ path('app_reserve_edit', {'id': reserve.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucune entrer pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reserve_new') }}">Cree une nouvelle reservation</a>
{% endblock %}
