{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1 class="text-center mb-4">Reservationc salle de cours</h1>
    <div class="mb-3">
        <a href="{{ path('app_reserve_new') }}" class="btn btn-success">Cree une nouvelle reservation</a>
    </div>
    <!-- Search Form -->
    <form method="get" action="{{ path('app_reserve_index') }}" class="p-4 border rounded shadow-sm">
        <div class="mb-3">
            <label for="salle" class="form-label">Salle :</label>
            <select id="salle" name="salle_id" class="form-select">
                <option value="">-- Sélectionner une Salle --</option>
                {% for salle in salles %}
                    <option value="{{ salle.id }}" 
                        {{ app.request.query.get('salle_id') == salle.id ? 'selected' : '' }}>
                        {{ salle.nomDeSalle }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-3">
            <label for="date_reservation" class="form-label">Date :</label>
            <input type="date" id="date_reservation" name="date_reservation" 
                value="{{ app.request.query.get('date_reservation') }}" class="form-control">
        </div>

        <div class="mb-3">
            <label for="promotion" class="form-label">Promotion :</label>
            <select id="promotion" name="promotion_id" class="form-select">
                <option value="">-- Sélectionner une Promotion --</option>
                {% for promotion in promotions %}
                    <option value="{{ promotion.id }}" 
                        {{ app.request.query.get('promotion_id') == promotion.id ? 'selected' : '' }}>
                        {{ promotion.niveauPromotion }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>


    <!-- Reservation Table -->
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date_reservation</th>
                <th scope="col">Heure_depart</th>
                <th scope="col">Heure_fin</th>
                <th scope="col">Nom Enseignant</th> 
                <th scope="col">Promotion</th>
                <th scope="col">Salle</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% set user = app.user %}
        
        {% for reserve in reserves %}
            <tr>
                <td>{{ reserve.id }}</td>
                <td>{{ reserve.dateReservation|date('Y-m-d') }}</td>
                <td>{{ reserve.heureDepart|date('H:i:s')  }}</td>
                <td>{{  reserve.heureFin|date('H:i:s') }}</td>
                <td>{{ reserve.enseignants|first.getNomEnseignant() }}</td>
                <td>{{ reserve.promotion|first.getEnseignement() }}</td>
                <td>{{ reserve.salles|first.getNomDeSalle() }}
                <td>
                    <a href="{{ path('app_reserve_show', {'id': reserve.id}) }}">Afficher</a>
                    <a href="{{ path('app_reserve_edit', {'id': reserve.id}) }}">Modifier</a>
                </td>
            </tr>
            <tr>
                {# <td colspan="6">aucune entrer pour le moment</td> #}
            {% if user and 'Enseignant' in user.roles %}
                {# Si l'utilisateur est enseignant, on filtre par son email #}
                {% for enseignant in reserve.enseignants %}
                    {% if enseignant.emailEnseignant == user.email %}
                        <tr>
                            <td>{{ reserve.id }}</td>
                            <td>{{ reserve.dateReservation ? reserve.dateReservation|date('Y-m-d') : '' }}</td>
                            <td>{{ reserve.heureDepart ? reserve.heureDepart|date('H:i:s') : '' }}</td>
                            <td>{{ reserve.heureFin ? reserve.heureFin|date('H:i:s') : '' }}</td>
                            <td>
                                {% for salle in reserve.salles %}
                                    {{ salle.getNomDeSalle() }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for enseignant in reserve.enseignants %}
                                    {{ enseignant.emailEnseignant }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for promotion in reserve.promotion %}
                                    {{ promotion.getNiveauPromotion() }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('app_reserve_show', {'id': reserve.id}) }}">show</a>
                                <a href="{{ path('app_reserve_edit', {'id': reserve.id}) }}">edit</a>
                                <form method="post" action="{{ path('app_reserve_delete', {'id': reserve.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reserve.id) }}">
                                    <button type="submit">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% else %}
                {# Si l'utilisateur n'est pas enseignant, on affiche toutes les réservations #}
                <tr>
                    <td>{{ reserve.id }}</td>
                    <td>{{ reserve.dateReservation ? reserve.dateReservation|date('Y-m-d') : '' }}</td>
                    <td>{{ reserve.heureDepart ? reserve.heureDepart|date('H:i:s') : '' }}</td>
                    <td>{{ reserve.heureFin ? reserve.heureFin|date('H:i:s') : '' }}</td>
                    <td>
                        {% for salle in reserve.salles %}
                            {{ salle.getNomDeSalle() }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% for enseignant in reserve.enseignants %}
                            {{ enseignant.emailEnseignant }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% for promotion in reserve.promotion %}
                            {{ promotion.getNiveauPromotion() }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('app_reserve_show', {'id': reserve.id}) }}">show</a>
                        <a href="{{ path('app_reserve_edit', {'id': reserve.id}) }}">edit</a>
                        <form method="post" action="{{ path('app_reserve_delete', {'id': reserve.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reserve.id) }}">
                            <button type="submit">delete</button>
                        </form>
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="9">Aucun reservation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
