{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<div class="container mt-5">

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="text-center mb-4">Créer une Nouvelle Réservation</h1>

    <div class="card shadow-sm p-4">
        {{ include('reserve/_form.html.twig') }}
    </div>

    <div class="mt-4 text-end">
        <a href="{{ path('app_reserve_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
