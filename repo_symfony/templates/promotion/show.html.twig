{% extends 'base.html.twig' %}

{% block title %}Détails de la Promotion{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de la Promotion</h1>

    <div class="card p-4 shadow-sm">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ promotion.id }}</td>
                </tr>
                <tr>
                    <th>Niveau de la Promotion</th>
                    <td>{{ promotion.niveauPromotion }}</td>
                </tr>
                <tr>
                    <th>Enseignement</th>
                    <td>{{ promotion.enseignement }}</td>
                </tr>
                <tr>
                    <th>Choix</th>
                    <td>{{ promotion.choix }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_promotion_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}" class="btn btn-warning ml-2">Modifier</a>
    </div>

    <div class="mt-4 text-center">
        {{ include('promotion/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
