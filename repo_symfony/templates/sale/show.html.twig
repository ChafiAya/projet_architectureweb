{% extends 'base.html.twig' %}

{% block title %}Détails de la Salle{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de la Salle</h1>

    <div class="card shadow-sm p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ sale.id }}</td>
                </tr>
                <tr>
                    <th>Bâtiment</th>
                    <td>{{ sale.batiment }}</td>
                </tr>
                <tr>
                    <th>Étage</th>
                    <td>{{ sale.etage }}</td>
                </tr>
                <tr>
                    <th>Nom de la Salle</th>
                    <td>{{ sale.nomDeSalle }}</td>
                </tr>
                <tr>
                    <th>Capacité</th>
                    <td>{{ sale.capacite }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_sale_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_sale_edit', {'id': sale.id}) }}" class="btn btn-warning ml-2">Modifier</a>
    </div>

    <div class="mt-4 text-center">
        {{ include('sale/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
